main :: Document {
  font: 11pt
  type: article
}

main {
  textwidth: 42eM
  oddsizemargin: oddsidemargin - 5eM
  textheight: 145ex
  topmargin: -16ex
  parskip: parskip + baselineskip
}

hreff :: Procedure {
  arity: 1
  action: Action {
    h: href {
      url: $1
      name: $1
    }
    write h
  }
}

thesection :: Procedure {
  arity: 0
  action: Action {
    write Latex {
      literal: '\arabic{section}'
    }
  }
}

reopen main {
  section: -1
}

thesubsection :: Procedure {
  arity: 0
  action: Action {
    write Latex {
      literal: '\arabic{section}.\arabic{subsection}.'
    }
  }
}

