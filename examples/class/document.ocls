Document :: Class {
  attributes:
    [
      font-size: 12pt,
      type: book,
      textwidth: 0,
      oddsizemargin: 0,
      textheight: 0,
      topmargin: 0,
      parskip: 0,
      text: ""
    ]
  methods:
    [
      append: Procedure {
        arity: 1
        action: Action {
          text: text + $1
        }
      }
    ]
}